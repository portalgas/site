pc.localcache="0"apc.localcache.size="512"apc.coredump_unmap="0"</pre><table>	<tr>		<th>Chiave</th>		<th>Valore predefinito</th>		<th>Valore</th>		<th>Nota</th>	</tr>	<tr>		<td>apc.shm_size</td>		<td>30 MB</td>		<td>128 MB</td>		<td> con 1 GB di RAM</td>	</tr>	<tr>		<td>apc.gc_ttl</td>		<td>3600</td>		<td>1800</td>		<td></td>	</tr>	<tr>		<td>apc.mmap_file_mask</td>		<td>no value</td>		<td>/tmp/apc.xLcWoX</td>		<td></td>	</tr>	<tr>		<td>apc.num_files_hint</td>		<td>1000</td>		<td>1024</td>		<td></td>	</tr>	<tr>		<td>apc.ttl</td>		<td>0</td>		<td>7200</td>		<td></td>	</tr>	<tr>		<td>apc.user_ttl</td>		<td>0</td>		<td>7200</td>		<td></td>	</tr></table>