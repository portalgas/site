    <files>
        <filename module="mod_sfacebooklikebox">mod_sfacebooklikebox.php</filename>
		<filename>mod_sfacebooklikebox.xml</filename>

    </files>
	
	<config>
	<fields name="params">
		<fieldset name="basic">
		<field name="appid" type="text" default="" label="appid (optional)" description="Like box Application ID." />
		<field name="href" size="50" type="text" label="Facebook Page URL" description="Place Facebook Url Here" />
		<field name="width" type="text" label="Width" default="300" description="Like box width in pixels. Default: 300px." />
		<field name="height" type="text" default="500" label="Height" description="Like box height in pixels." />
		
		<field name="colorscheme" type="list" label="Color Scheme" description="The Color of the box." >
			<option value="light">light</option>
			<option value="dark">dark</option>
		</field>
		
		<field name="show_faces" type="radio" label="Show Faces" default="1" description="Display the faces of your funs. Default: Show." >
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</field>
		
		<field name="stream" type="radio" label="Show stream" default="0" description="Display the stream with the latest posts." >
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</field>
		
		<field name="header" type="radio" label="Show header" default="1" description="Display the header of the box. Default: Show" >
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</field>
		<field name="border" type="radio" label="Show border" default="1" description="Display the border of the box. Default: Show" >
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</field>
		
