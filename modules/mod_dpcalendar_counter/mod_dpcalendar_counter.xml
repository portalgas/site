	<description>MOD_DPCALENDAR_COUNTER_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_dpcalendar_counter">mod_dpcalendar_counter.php
		</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
