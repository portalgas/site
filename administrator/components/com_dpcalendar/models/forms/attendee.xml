<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_dpcalendar/models/fields">
		<field name="id" default="0" label="JGLOBAL_FIELD_ID_LABEL"
			type="text" readonly="true" class="readonly" description="JGLOBAL_FIELD_ID_DESC" />
		<field name="event_id" type="text"
			label="COM_DPCALENDAR_ATTENDEE_FIELD_EVENT_LABEL" description="COM_DPCALENDAR_ATTENDEE_FIELD_EVENT_DESC"
			required="true" />
		<field name="user_id" type="user"
			label="COM_DPCALENDAR_ATTENDEE_FIELD_USER_LABEL" description="COM_DPCALENDAR_ATTENDEE_FIELD_USER_DESC"/>
		<field name="location_id" default="0" label="JGLOBAL_FIELD_ID_LABEL"
			type="hidden" readonly="true" class="readonly" description="JGLOBAL_FIELD_ID_DESC" />

		<field name="email" type="email" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_ATTENDEE_FIELD_EMAIL_LABEL" description="COM_DPCALENDAR_ATTENDEE_FIELD_EMAIL_DESC"
			required="true" />
		<field name="telephone" type="text" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_ATTENDEE_FIELD_TELEPHONE_LABEL" description="COM_DPCALENDAR_ATTENDEE_FIELD_TELEPHONE_DESC"/>
		<field name="name" type="text" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_ATTENDEE_FIELD_NAME_LABEL" description="COM_DPCALENDAR_ATTENDEE_FIELD_NAME_DESC"/>

		<field name="remind_time" type="text" size="4" default="15"
			label="COM_DPCALENDAR_ATTENDEE_FIELD_REMIND_TIME_LABEL" description="COM_DPCALENDAR_ATTENDEE_FIELD_REMIND_TIME_DESC"/>
		<field name="remind_type" type="list" label="COM_DPCALENDAR_ATTENDEE_FIELD_REMIND_TYPE_LABEL"
			description="COM_DPCALENDAR_ATTENDEE_FIELD_REMIND_TYPE_DESC" default="1">
			<option value="1">COM_DPCALENDAR_ATTENDEE_FIELD_REMIND_TYPE_MINUTES</option>
			<option value="2">COM_DPCALENDAR_ATTENDEE_FIELD_REMIND_TYPE_HOURS</option>
			<option value="3">COM_DPCALENDAR_ATTENDEE_FIELD_REMIND_TYPE_DAYS</option>
			<option value="4">COM_DPCALENDAR_ATTENDEE_FIELD_REMIND_TYPE_WEEKS</option>
		</field>

		<field name="public" type="radio" label="COM_DPCALENDAR_ATTENDEE_FIELD_PUBLIC_LABEL"
			description="COM_DPCALENDAR_ATTENDEE_FIELD_PUBLIC_DESC" class="inputbox btn-group" size="1"
			default="1">
			<option value="1" class="btn">JYES</option>
			<option value="0" class="btn">JNO</option>
		</field>
		<field name="series" type="radio" label="COM_DPCALENDAR_ATTENDEE_FIELD_SERIES_LABEL"
			description="COM_DPCALENDAR_ATTENDEE_FIELD_SERIES_DESC" class="inputbox btn-group" size="1"
			default="0">
			<option value="1" class="btn">JYES</option>
			<option value="0" class="btn">JNO</option>
		</field>
		<field name="state" type="list" label="JSTATUS"
			description="COM_DPCALENDAR_ATTENDEE_FIELD_STATE_DESC" class="inputbox" size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="3">COM_DPCALENDAR_ATTENDEE_FIELD_STATE_NEED_PAYMENT</option>
			<option value="4">COM_DPCALENDAR_ATTENDEE_FIELD_STATE_HOLD</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="transaction_id" type="text" class="inputbox" size="40"
               label="COM_DPCALENDAR_ATTENDEE_FIELD_INVOICE_LABEL" description="COM_DPCALENDAR_ATTENDEE_FIELD_INVOICE_DESC"
               />
        <field name="type" type="text" class="inputbox" size="40" default=""
               label="COM_DPCALENDAR_ATTENDEE_FIELD_TYPE_LABEL" description="COM_DPCALENDAR_ATTENDEE_FIELD_TYPE_DESC"
               />
        <field name="price" type="text" class="inputbox" size="40"
               label="COM_DPCALENDAR_ATTENDEE_FIELD_PRICE_LABEL" description="COM_DPCALENDAR_ATTENDEE_FIELD_PRICE_DESC"
               />
        <field name="processor" type="text" class="inputbox" size="40"
               label="COM_DPCALENDAR_ATTENDEE_FIELD_PROCESSOR_LABEL" description="COM_DPCALENDAR_ATTENDEE_FIELD_PROCESSOR_DESC"
               />
        <field name="payer_email" type="email" class="inputbox" size="40"
               label="COM_DPCALENDAR_ATTENDEE_FIELD_EMAIL_LABEL" description="COM_DPCALENDAR_ATTENDEE_FIELD_EMAIL_DESC"
               />
	</fieldset>
</form>
